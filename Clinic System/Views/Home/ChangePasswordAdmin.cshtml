@model Core.ViewModel.ChangepasswordModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title> تغيير كلمة المرور</title>
	<link href="~/css/addpatient.css" rel="stylesheet" />
</head>
<body style="overflow-x: hidden;">
	<div class="container mt-5">
		<h2 class="mb-3"> تغيير كلمة المرور </h2>
		<form id="registrationForm" asp-action="ChangePasswordAdmin" asp-controller="Home" method="post" enctype="multipart/form-data">
			<!-- القسم الأول: معلومات المريض الشخصية -->
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label for="patientFullName" class="form-label">كلمة المرور الحالية</label>
				<input type="text" asp-for="currentpass" class="form-control" placeholder="أدخل كلمة المرور الحالية">
				<span asp-validation-for="currentpass" style=" color:red;"></span>
			</div>
			<div class="mb-3">
				<label for="patientFullName" class="form-label">كلمة المرور الجديدة</label>
				<input type="text" asp-for="Newpass" class="form-control" placeholder="كلمة المرور الجديدة">
				<span asp-validation-for="Newpass" style=" color:red;"></span>
			</div>
			<div style="text-align: center;">

				<input type="submit" class="btnadd" value="تغيير كلمة المرور" />
			</div>
		</form>
	</div>
</body>
</html>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
